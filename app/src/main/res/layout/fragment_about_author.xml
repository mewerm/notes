<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".Fragments.Notification.AboutFragment">


    <ImageView
        android:id="@+id/indian_picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="16dp"
        android:src="@drawable/indian_who_do_that_sht"
        app:layout_constraintBottom_toTopOf="@+id/text_view_about_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_about_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:padding="@dimen/standart_margin"
        android:text="@string/author_say"
        android:textColor="@color/theme_all_orange"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indian_picture" />

    <Button
        android:id="@+id/bottom_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_about_author">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>